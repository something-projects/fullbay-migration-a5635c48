# =============================================================================
# Fullbay Migration - Terraform Variables Example
#
# Copy this file to terraform.tfvars and fill in your actual values:
#   cp terraform.tfvars.example terraform.tfvars
# =============================================================================

# -----------------------------------------------------------------------------
# AWS Configuration
# -----------------------------------------------------------------------------

aws_region   = "us-west-2"
project_name = "fullbay-migration"
environment  = "production"

# -----------------------------------------------------------------------------
# Network Configuration (Optional)
# -----------------------------------------------------------------------------

# Leave empty to use default VPC, or specify existing VPC ID
vpc_id    = ""
subnet_id = ""

# CIDR blocks allowed to access the instance
# WARNING: Restrict these in production! Example: ["YOUR_IP/32"]
allowed_ssh_cidrs  = ["0.0.0.0/0"]
allowed_http_cidrs = ["0.0.0.0/0"]

# -----------------------------------------------------------------------------
# EC2 Configuration
# -----------------------------------------------------------------------------

instance_type = "t3.medium"  # Options: t3.small, t3.medium, t3.large, m5.large
volume_size   = 50          # Root volume size in GB (minimum 30)

# Leave empty to use latest Ubuntu 22.04 LTS
ami_id = ""

# -----------------------------------------------------------------------------
# Database Configuration (RDS)
# -----------------------------------------------------------------------------

# Existing RDS instance identifier
rds_identifier = "fullbayproduction-copy"

# Database credentials (SENSITIVE - keep secure!)
mysql_user     = "IsoForm"
mysql_password = "your-mysql-password-here"
mysql_database = "fullbay"

# -----------------------------------------------------------------------------
# S3 Configuration
# -----------------------------------------------------------------------------

# S3 bucket name (must be globally unique)
# Suggestion: use format like "company-fullbay-migration-data"
s3_bucket_name = "your-company-fullbay-migration"

# S3 key prefix for organizing files
s3_prefix = "fullbay-output"

# Days before transitioning old data to Glacier (cost optimization)
s3_lifecycle_days = 90

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Git repository URL (HTTPS)
# Example: "https://github.com/your-org/fullbay-migration.git"
git_repo_url = "https://github.com/isoform-bucket-development/fullbay-migration.git"

# Git branch to deploy
git_branch = "main"

# Docker Compose file to use
docker_compose_file = "docker-compose.yml"

# -----------------------------------------------------------------------------
# SSH Key Configuration
# -----------------------------------------------------------------------------

# Name for the SSH key pair (will be created)
ssh_key_name = "fullbay-migration-key"

# -----------------------------------------------------------------------------
# Additional Tags (Optional)
# -----------------------------------------------------------------------------

tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Compliance  = "Internal"
}
