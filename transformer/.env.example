# Fullbay Transformer Configuration
# Copy this file to .env and set your actual credentials

# SSH Gateway Configuration (for production database access)
REMOTE_HOST=your-gateway-server-ip
REMOTE_USER=your-ssh-username
SSH_PASSWORD=your-ssh-password

# Database Configuration
MYSQL_HOST=your-database-host.amazonaws.com
MYSQL_USER=your-database-username
MYSQL_PASSWORD=your-database-password
MYSQL_DATABASE=your-database-name

# Connection Options
SSH_TUNNEL=true                 # Enable SSH tunnel mode
SSH_TUNNEL_PORT=55306           # Local tunnel port
OUTPUT_DIR=../output            # Output directory
PRETTY_JSON=true                # Pretty print JSON

# Processing Configuration
# Note: Processing mode is now controlled via command line arguments:
# - Default: Demo mode (Simple Shop entities get full data, others basic)
# - --full: All entities get full data
# - --entityId <id>: Specific entity gets full data, others basic

AUTOCARE_VCDB_PATH=../Aces
AUTOCARE_PCDB_PATH=../Pies